{

  "manifest_version": 2,
  "name": "weblog",
  "version": "0.1",

  "description": "tool to visualize website usage using d3.js",

  "permissions": [
    "storage"
  ],

  "icons": {
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "browser_action": {
    "default_title": "weblog",
    "default_popup": "index.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["logger.js"]
    }
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval' https://d3js.org/d3.v4.js; object-src 'self';",

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "weblog@wbne.com"
    }
  }

}
